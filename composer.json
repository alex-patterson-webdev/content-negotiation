{
  "name": "alex-patterson-webdev/content-negotiation",
  "minimum-stability": "dev",
  "prefer-stable": true,
  "authors": [
    {
      "name": "Alex Patterson",
      "email": "alex.patterson.webdev@gmail.com"
    }
  ],
  "require" : {
    "php": ">=7.4 || >=8.0"
  },
  "require-dev" : {
    "phpunit/phpunit" : "^9.5"
  },
  "autoload": {
    "psr-4": {
      "Arp\\ContentNegotiation\\" : "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "ArpTest\\ContentNegotiation\\" : "test/unit/"
    }
  },
  "scripts": {
    "test": "php vendor/bin/phpunit"
  },
  "config": {
    "optimize-autoloader": true,
    "sort-packages": true
  }
}
